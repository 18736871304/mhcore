$baseFontSize: 75;
@function rem($px){
  @return  $px / $baseFontSize * 1rem;
}
.content{
  width: 100%;
  overflow: hidden;
  padding-bottom: rem(98);
  img{
    width: 100%;
  }
}

.form_box{
  margin: 0 rem(90);
  padding-bottom: rem(30);
  .flexbox{
    display: flex
  }
  .br1{
    border: solid 1px #c6c6c6;
  }
  div, input, select {
    font-family: PingFang-SC-Medium;
    font-size: rem(30);
    font-weight: bold;
    line-height: rem(74);
    color: #686868;
  }
  
  input, select{
    background-color: #fcfafa;
    border-radius: rem(4);
    border: solid 1px #c6c6c6;
    padding-left: rem(20);
    width: 100%;
    box-sizing: border-box;
    outline-color: invert ;
    outline-style: none ;
    outline-width: 0px ;
    text-shadow: none ;
    -webkit-appearance: none ;
    -webkit-user-select: text ;
    outline-color: transparent ;
    box-shadow: none;
    color: #333;
    &::-webkit-input-placeholder{
      color: #949494;
    }
  }
  select{
    background: url("../images/select_icon.png") no-repeat;
    background-size: rem(20) rem(21) ;
    background-position: 95% center;
  }
  .list{
    margin-bottom: rem(30);
  }
  .label{
    width: rem(240);
  }
  .gender{
    .btn_box{
      flex: 1;
      display: flex;
      justify-content: space-between;
    }
    .radio{
      >div{
        width: rem(150);
        height: rem(78);
        background-color: #fcfafa;
        border-radius: rem(4);
        text-align: center;
        position: relative;
        color: #949494;
        &::after{
          content: '';
          position: absolute;
          width: 100%;
          height: 100%;
          background: url("../images/border.png") top no-repeat;
          background-size: 100% 100% ;
          left: 0;
          top: 0;
          display: none;
        }
      }
      .active{
        border: 1px solid transparent;
        color: #dc220d;
        &::after{
          display: block;
        }
      }
    }
  }
  .age{
    select{
      flex: 1;
    }
  }
  .get_code{
    input{
      flex: 1;
      line-height: rem(78);
      height: rem(78);
    }
    .btn{
      width: rem(200);
      line-height: rem(78);
      border-radius: rem(4);
      border: solid 1px #c6c6c6;
      font-family: PingFang-SC-Medium;
      font-size: rem(26);
      text-align: center;
      margin-left: rem(40);
      &.code {
        border: 1px solid #dd5353;
        color: #dd5353;
      }
    }
  }
  .submit{
    padding-top: rem(10);
    .btn{
      width: rem(570);
      line-height: rem(88);
      background-color: #dc220d;
      border-radius: rem(44);
      font-family: PingFang-SC-Medium;
      font-size: rem(32);
      font-weight: bold;
      font-stretch: normal;
      color: #ffffff;
      text-align: center;
    }
    .text{
      font-family: PingFang-SC-Medium;
      font-size: rem(22);
      font-weight: bold;
      // line-height: rem(74);
      line-height: 1em;
      color: #999999;
      text-align: center;
      margin-top: rem(20);
    }
  }
}
