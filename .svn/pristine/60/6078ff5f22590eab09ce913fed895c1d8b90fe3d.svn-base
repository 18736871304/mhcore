<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>家庭保障方案</title>
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="./css/mobile.css">
    <script>
        !(function () {
            function a() {
                var html = document.documentElement;
                var w = html.getBoundingClientRect().width;
                if (w > 750) {
                    w = 750;
                }
                var f = w / 7.5;
                html.style.fontSize = f + "px";
            }
            a();
            var timer;
            window.onresize = function () {
                clearTimeout(timer);
                timer = setTimeout(a, 300);
            }
        })();
    </script>
</head>

<body>
    <div class="template">
        <div class="wrap">
            <div class="banner">
                <img src="./images/banner.png" alt="美华保险">
            </div>
            <div class="infor">
                <div class="info-moudle">

                    <div class="insureName">
                        <label class="text" for="">您的年龄</label>
                        <div class="nameValue">
                            <input type="text" value="" placeholder="请输入您的年龄，如28" id="age">
                            <img src="./images/error.png" alt="">
                        </div>
                    </div>

                    <div class="insureName">
                        <label class="text" for="">为谁了解</label>
                        <div class="call">
                            <ul>
                                <li class="insureSelect">自己</li>
                                <li>家人</li>
                                <li>全家</li>
                            </ul>
                        </div>
                    </div>

                    <div class="insureName">
                        <label class="text" for="">您的姓名</label>
                        <div class="nameValue">
                            <input type="text" value="" placeholder="您的信息将被严格保密" id="user">
                            <img src="./images/error.png" alt="">
                        </div>
                    </div>
                    <div class="insureName">
                        <label class="text" for="">您的电话</label>
                        <div class="nameValue">
                            <input type="text" value="" placeholder="请输入您的电话(*已加密)" id="phone">
                            <img src="./images/error.png" alt="">
                        </div>
                    </div>


                    <div class="code_box">
                        <div class="code_value">
                            <span>验&nbsp;证&nbsp;码</span>
                            <div class="VScode">
                                <input type="text" value="" placeholder="请输入验证码" id="code">
                                <button id="send" class="send">点击获取</button>
                            </div>

                        </div>
                    </div>


                    <!-- 
                    <button class="phoneSubmit">
                        <div class="title">0元领取保险方案</div>
                    </button> -->

                    <div class="phoneSubmit phoneSubmit1">
                        <img src="./images/mobileBtn.png" alt="">
                    </div>


                </div>
            </div>


            <div class="bottom">
                <img src="./images/img1.png" alt="美华保险">
            </div>

        </div>
        <div class="success">
            <div class="dd">
                <div class="zhe"></div>
                <div class="suc">
                    <img src="./images/success.png" alt="">
                </div>
                <div class="sure">确认</div>
            </div>

        </div>


        <div class="btm">
            <img src="./images/mobileBtn.png" alt="">
        </div>

    </div>
    <script src="./js/jquery-1.10.1.min.js"></script>
    <script src="js/index.js"></script>


    <script>
        $('.btm').click(function () {
            $('html,body').animate({
                scrollTop: 160
            }, 'slow');
        });
    </script>
</body>

</html>