
.login-banner{
    background: red;
    height:7rem
}

.padding-container .cn-text{
    text-align:center;
    line-height:2;
    font-size: 0.7rem;
}

#last-login-line{
    flex-direction:row-reverse;
    border: 0;
}
#last-login-line span{
    margin-right:10px;

}
.href-wrap:after{
    content: '';
    display:block;
    clear:both;
}
.href-wrap a{
    width: 33%;
    line-height: 30px;
    text-align: center;
    float: left;
}
.bottom-fixed{
    position:fixed;
    left:0;
    bottom:0;
    background:red;
    width:100%;
    height:44px;
    color:#fff;
    text-align:center;
    line-height:44px;
}
.city-container{width:100%;position:absolute;top:0;left:0;background-color:#ffffff;z-index:11;display:none;}
.letter{width:20px;overflow:hidden;line-height:32px;font-size:16px;position:fixed;top:20px;right:10px;text-align:center;z-index:12;
    display: none;}
.letter ul{list-style-type:none;}
.letter ul li a{text-decoration:none;}
.city{width:90%;overflow:hidden;padding:20px;}
.city-list{width:100%;overflow:hidden;}
.city-list .city-letter{color:#6e6e6e;font-size:16px;display:inline-block;padding-top:15px;padding-bottom:5px;border-bottom:1px solid #e8ecf1;width:100%;}
.city-list p{color:#afafaf;width:95%;height:50px;line-height:50px;border-bottom:1px solid #e8ecf1;cursor:pointer;}
.UISelect{margin-top:5px}
