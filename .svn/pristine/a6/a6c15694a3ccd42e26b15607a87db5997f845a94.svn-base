* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.clearfix {
  clear: both;
  content: "";
  display: block;
  overflow: hidden
}

ul li,
ol li {
  list-style: none;
}

a {
  text-decoration: none;
  outline: 0;
  display: inline-block;
}


input {
  border: 0;
  outline: 0;
}

em,
i {
  font-style: normal;
}

img {
  border: none;
  outline: 0;
}

html {
  font-family: "微软雅黑";
  width: 100%;
}

body {
  width: 100%;
  position: relative;
}

.container {
  width: 100%;
}

.wrap {
  width: 100%;
  background: #FFEAD8;
}

.banner img,
.bottom img,
.wrap img {
  width: 100%;
  height: 100%;
  display: block;
}

.banner {
  margin-bottom: 0.5rem;
  min-height: 1.7rem;
}

/* 右边的 */
.infor {
  color: #333;
  font-size: 14px;
  align-items: center;
  margin: 0 0.6rem;
  padding: 0.8rem 0.3rem 0.3rem;
  box-shadow: 0px 6px 57px 0px rgba(217,179,144,0.32);
  border-radius: 0.2rem;
  position: relative;
  background: #fff;
}

.infor .title {
  position: absolute;
  top: -0.17rem;
  left: 50%;
  transform: translate(-50%, 0);
 }

.insureName {
  margin-bottom: 0.42rem;
}

.insureName label {
  font-size: 0.28rem;
  color: #4A4544;
  letter-spacing: 0.01rem;
  font-weight: bold;
  display: block;
  margin-bottom: 0.2rem;

  position: relative;
}

.insureName label span {
  font-size: 0.24rem;
}

.insureName label::after {
  display: inline-block;
  content: '*';
  color: #FF2B00;
}

.insureName .nameValue {
  display: flex;
  flex-direction: column;
  position: relative;
}

.insureName .nameValue>p {
  content: '';
  color: #FF0000;
  bottom: -20px;
  font-weight: 400;
  font-size: 0.24rem;
  position: absolute;
}


.insureName .nameValue input {
  border: 1px solid #BABABA;
  box-sizing: border-box;
  border-radius: 0.08rem;
  font-size: 0.24rem;
  padding: 0 0.1rem;
  line-height: 0.6rem;
}

.insureName .call ul li {
  width: 48%;
  margin-right: 4%;
  margin-bottom: 0.16rem;
  line-height: 0.6rem;
  font-size: 0.24rem;
  border: 1px solid #BABABA;
  border-radius: 0.08rem;
  text-align: center;
  float: left;
}

.insureName .call ul li:nth-child(2n) {
  margin-right: 0;
}

.insureName .call ul li:nth-child(3), .insureName .call ul li:nth-child(4){
  margin-bottom: 0;
}

.insureSelect {
  background: #FE5D17;
  color: #fff;
}

.nameValue img {
  position: absolute;
  width: 0.35rem;
  height: 0.35rem;
  position: absolute;
  top: 0.2rem;
  right: 0.2rem;
  display: none;
}

.nameValue img {
  width: 0.4rem;
  height: 0.4rem;
  position: absolute;
  top: 0.25rem;
  right: 0.2rem;
  display: none;
}

.agreement {
  display: flex;
  font-size: 0.18rem;
  margin-bottom: 0.2rem;
  color: #172034;
}

.agreement .agreement-btn {
  width: 0.26rem;
  text-align: center;
  line-height: 0.22rem;
  margin-right: 0.15rem;
  border: 1px solid #BABABA;
  border-radius: 5px;
  background: #4A4544;
}

.agreement .agreement-btn::after {
  display: block;
  content: '√';
  color: #fff;
}

.tick-btn {
  background: #E8632D;
}

.phoneSubmit img {
  /* width: 90%;
  height: 90%;
  display: block;
  margin: 0 auto; */
  /* animation: myMove 2s infinite;
  -webkit-animation: myMove 2s infinite; */
  cursor: pointer;
}

@keyframes myMove {
  0% {
    width: 90%;
    height: 90%;
  }

  50% {
    width: 100%;
    height: 100%;
  }

  100% {
    width: 90%;
    height: 90%;
  }
}

.success {
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, .4);
  display: none;
}

.success-box{
  width: 4.5rem;
  background: #FFFFFF;
  border-radius: 0.4rem;
  margin: 2rem auto 0;
  text-align: center;
}

.success-box .success-image1 {
  width: 2rem;
  margin: 0 auto 0;
}

.success-box .success-image1 img{
  width: 100%;
  margin-top: -0.3rem;
}

.success-box .success-image2 {
  width: 3.3rem;
  margin: 0 auto;
}

.success-box .success-image2 img {
  width: 100%;
}