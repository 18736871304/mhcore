.index-page {
}

.index-page .index-page-loading {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 100%;
	height: 100%;
}

.index-page .transition-box {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.index-page .transition-box .enter-pic-box {
	width: 60vw;
	padding-right: 9.33vw;
}

.index-page .transition-box .logo-box {
	width: 26.67vw;
	margin-top: 75px;
}

.index-page .enter-box {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	/*background: #dc220d;*/
	background: url("/images/insureplan/index.jpg") no-repeat center;
	background-size: cover;
}

.index-page .enter-box .enter-text {
	color: #ffffff;
	font-size: 26px;
}

.index-page .enter-box .enter-button-box {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 22.67vw;
	height: 22.67vw;
	margin-top: 48vw;
	border-radius: 50%;
	background: #ffffff;
}

.index-page .enter-box .enter-button-box .enter-button {
	font-size: 18px;
	color: #dc220d;
}
.index-page .enter-box .enter-button-box-new {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 300px;
	height: 49px;
	margin-top: 108vw;
	/* border-radius: 50%; */
	background: rgba(220, 34, 13, 0.8);
}
.index-page .enter-box .enter-button-box-new .enter-button-new {
	font-size: 18px;
	color: #fff;
}
