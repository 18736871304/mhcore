.hosting-charts-box {}
.hosting-charts-box .hosting-charts-container{
	display: flex;
	justify-content: space-between;
	padding: 24px 10px;
	box-shadow: -1px -1px 3px #f2f2f2;
}
.hosting-charts-box .hosting-charts-container .charts-left{}
.hosting-charts-box .hosting-charts-container .charts-left .echarts-box{}
.hosting-charts-box .hosting-charts-container .charts-left .echarts-title{
	font-size: 14px;
	text-align: center;
}
.hosting-charts-box .hosting-charts-container .charts-right{
	width: 119px;
}
.hosting-charts-box .hosting-charts-container .charts-right .charts-right-wraper {}
.hosting-charts-box .hosting-charts-container .charts-right .charts-right-wraper .insurance-total{
	height: 84px;
	border: 1px solid #eee;
	border-radius: 5px;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.hosting-charts-box .hosting-charts-container .charts-right .charts-right-wraper .insurance-total div:first-child {
	font-size: 12px;
	color: #282828;
}
.hosting-charts-box .hosting-charts-container .charts-right .charts-right-wraper .insurance-total div:first-child span {
	font-size: 18px;
	letter-spacing: -1px;
	margin-right: 5px;
}
.hosting-charts-box .hosting-charts-container .charts-right .charts-right-wraper .insurance-total div:last-child {
	font-size: 12px;
	color: #979797;
}
.hosting-charts-box .hosting-charts-container .charts-right .charts-right-wraper .insurance-total div:last-child span {}
.hosting-charts-box .hosting-charts-container .charts-right .charts-right-wraper .insurance-total-fee{
	border-left: 5px solid #313131;

}
.hosting-charts-box .hosting-charts-container .charts-right .charts-right-wraper .insurance-total-sum{
	margin-top: 10px;
	border-left: 5px solid #dc220d;
}
