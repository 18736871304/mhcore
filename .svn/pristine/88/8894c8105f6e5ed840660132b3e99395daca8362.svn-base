.list-box {}
.list-box .list-box-wrap{
	padding: 0 23px;
}
.list-box .list-box-wrap .list-item{
	display: flex;
	margin-top: 30px;
}
.list-box .list-box-wrap .list-item .list-item-left{
	display: flex;
	align-items: center;
}
.list-box .list-box-wrap .list-item .list-item-left img{
	width: 44px;
}
.list-box .list-box-wrap .list-item .list-item-right{
	display: flex;
	flex-direction: column;
	margin-left: 23px;
}
.list-box .list-box-wrap .list-item .list-item-right .top{
	font-size: 16px;
	color: #282828;
}
.list-box .list-box-wrap .list-item .list-item-right .bottom{
	margin-top: 2px;
	font-size: 12px;
	color: #979797;
	line-height: 18px;
}