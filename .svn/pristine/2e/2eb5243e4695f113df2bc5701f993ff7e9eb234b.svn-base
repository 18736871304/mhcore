html, body {
	font-size: 16px;
	margin: 0;
	padding: 0;
	overflow-x: hidden;
	font-family: PingFangSC-Regular, Microsoft YaHei, Helvetica Neue, Helvetica, Arial, sans-serif;
	-webkit-tap-highlight-color: rgba(0,0,0,0);
}

body{
	background: #ffffff;
}

img {
	width: 100%;
}

.main {
	position: relative;
	max-width: 750px;
	height: 100vh;
	margin: 0 auto;
}

.hide {
	display: none !important;
}

.show {
	display: block !important;
}

ul {
	margin: 0;
	padding: 0;
}

li {
	list-style: none;
}

