* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.clearfix {
  clear: both;
  content: "";
  display: block;
  overflow: hidden
}

ul li,
ol li {
  list-style: none;
}

a {
  text-decoration: none;
  outline: 0;
  display: inline-block;
}


input {
  border: 0;
  outline: 0;
}

em,
i {
  font-style: normal;
}

img {
  border: none;
  outline: 0;
}

html {
  font-family: "微软雅黑";
  width: 100%;
}

body {
  width: 100%;
  position: relative;
}

.container {
  width: 100%;
  padding-top: 3.53rem;
  background: url(../images/image.png) no-repeat;
  background-size: 100%;
  padding: 3.53rem 0.2rem 0;
}

.container img {
  width: 100%;
  position: relative;
}

.container .information {
  width: 0.9rem;
  position: absolute;
  top: 5rem;
  right: 0;
}

.qrcode-container {
  width: 100%;
  height: 100vh;
  background: url("../images/image6.png") no-repeat;
  background-size: 100%;
  padding-top: 3.6rem;
}

.qrcode-container img {
  width: 100%;
}

.qrcode-container .qrcode-box{
  text-align: center;
}

.qrcode-box .text1 {
  font-size: 0.33rem;
  font-weight: bold;
  color: #FE7C48;
  margin: 0 0 0.5rem 0;
}

.qrcode-box .text2 {
  font-size: 0.28rem;
  font-weight: 500;
  color: #504F4F;
  margin: 0.2rem 0;
}

.qrcode-box .box1{
  width: 4.38rem;
  height: 4.38rem;
  background: #FEF1E0;
  border: 0.08rem solid #F5C471;
  margin: 0 auto;
}

.qrcode-box .box2{
  width: 3.16rem;
  height: 3.16rem;
  background: #FF8C59;
  box-shadow: 0px 0px 7px 0px rgba(255,129,78,0.39);
  margin: 0.56rem auto 0.26rem;
  border: 0.13rem solid #FF8C59;
}

.qrcode-box .text3 {
  font-size: 0.24rem;
  font-weight: 500;
  color: #9C9C9C;
}

.qrcode-box .box3{
  width: 100%;
  height: 100%;
  background: #fff;
  box-shadow: 0px 0px 7px 0px rgba(255,129,78,0.39);
  border-radius: 0.13rem;
}

.qrcode-box .image1 {
  width: 2.5rem;
  margin: 0 auto;
}