html, body {
    font-size: 16px;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    font-family: PingFangSC-Regular, Microsoft YaHei, Helvetica Neue, Helvetica, Arial, sans-serif;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}
.main {
    position: relative;
    max-width: 750px;
    height: 100vh;
    margin: 0 auto;
}
.hide {
    display: none !important;
}

.show {
    display: block !important;
}

ul {
    margin: 0;
    padding: 0;
}

li {
    list-style: none;
}
.clearfix:after{content:"";display:table;clear:both}
::-webkit-input-placeholder { /* WebKit, Blink, Edge */
    color: #bbbbbb;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color:    #bbbbbb;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
    color:    #bbbbbb;
}
:-ms-input-placeholder { /* Internet Explorer 10-11 */
    color:    #bbbbbb;
}
@keyframes animationT {
    0% {
        transform: scale(1.08);
    }
    10%{
        transform: scale(1);
    }
    20%{
        transform: scale(1.08);
    }
    30%{
        transform: scale(1);
    }
    40%{
        transform: scale(1.08);
    }
    50%{
        transform: scale(1);
    }
    60% {
        transform: scale(1.08);
    }
    70% {
        transform: scale(1);
    }
    80% {
        transform: scale(1.08);
    }
    90% {
        transform: scale(1);
    }
    100% {
        transform: scale(1.08);
    }
}
.content{
    background: #fff;
    padding-bottom: 3.5rem;
}
.page{
    width: 100%;
    margin-top: 25px;
    text-align: center;
}
.page .warp{
    display: inline-block;
    width: 90%;
}
.page img{
    width: 100%;
}
.page1{
    position: relative;
}

.page1 input{
    position: absolute;
    bottom: 8%;
    left: 10%;
    display: block;
    width: 80%;
    border: 0;
    height: 12%;
    border:none;
    outline: none;
    background: url("/images/activity/1yuango/btn1.png")no-repeat center center;
    background-size: contain;
    animation: animationT 6s infinite linear;
}
.page1{
    margin: 0;
}
.flexFooter .wrap{
    position: fixed;
    bottom:-0.22rem;
    left: 0;
    right: 0;
    /*height:2.989rem;*/
    max-width: 750px;
    width: 100%;
    margin: 0 auto;
}
.flexFooter img{
    width: 100%;
    /*height: 10.3125rem;*/
    /*height: 2.989rem;*/
}
.flexFooter input{
    position: absolute;
    bottom: 13%;
    right: 9%;
    display: block;
    width: 42%;
    border: 0;
    height: 29%;
    border: none;
    outline: none;
    background: url("/images/activity/1yuango/btnf.png")no-repeat center center;
    background-size: contain;
    animation: animationT 6s infinite linear;
}
